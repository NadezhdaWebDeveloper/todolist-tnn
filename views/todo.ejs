<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Todo List</title>
    <script src="/assets/libs/jquery-3.2.0.min.js" type="text/javascript"></script>
    <script src="/assets/todo-list.js" type="text/javascript"></script>
    <link  href="/assets/styles.css" rel="stylesheet" type="text/css">
  </head>
  <body>
    <h1>My ToDo List</h1>
    <div id="todo-table">
      <form>
        <input type="text" name="item" placeholder="Add new item..." required value="">
        <button type="submit">Add item</button>
      </form>
      <ul>
        <% for(var i=0; i < todos.length; i++){ %>
          <li><%= todos[i].item %></li>
        <% } %>
      </ul>
    </div>
  </body>
</html>
